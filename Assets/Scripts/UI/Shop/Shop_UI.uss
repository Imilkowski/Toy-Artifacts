.shop_-u-i {
    display: flex;
    flex-direction: column;
    position: absolute;

    align-self: center;
    justify-content: center;
    align-items: center;

    width: 100%;
    height: 100%;

    top: 0;
    bottom: 0;

    padding: 10px;

    -unity-font-definition: var(--font-regular);
}

.title-container {
    flex-direction: row;
    align-items: center;
    justify-content: center;

    height: 96px;
    width: 100%;
}

.title {
    -unity-font-style: bold;
    font-size: 24px;
}

.content-separator {
    height: 8px;
}

.shop-container {
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;

    height: 100%;
    width: 100%;
    border-radius: 16px;

    background-color: rgb(128, 145, 184);
}

.close-button-container {
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    height: 40px;

    right: 16px;
    top: 16px;

    position: absolute
}

.close-button-icon {
    background-color: rgba(0, 0, 0, 0);
    height: 24px;
    width: 24px;
}

.stats-container {
    height: 64px;
    width: 100%;

    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.tiers-container {
    height: 64px;
    width: 100%;

    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.toys-container {
    height: 800px;
    width: 90%;
    margin-top: 32px;

    flex-direction: row;
    align-items: flex-start;
    align-self: center;
    justify-content: center;
    flex-wrap: wrap;
}

.stat-container {
    flex-direction: row;
    align-items: center;
    justify-content: center;

    width: 50%;
}

.tier-container {
    flex-direction: row;
    align-items: center;
    justify-content: center;

    width: 33.3%;
    height: 36px;
}

.icon {
    background-color: rgba(0, 0, 0, 0);
    height: 24px;
    width: 24px;
}

.sub-label {
    font-size: 16px;
    left: 4px;
    
    overflow: hidden;
    white-space: normal;
    -unity-text-overflow-position: end;
}

.tier-label {
    font-size: 16px;
}

.toy-container {
    flex-direction: row;
    align-items: center;
    justify-content: center;

    height: 80px;
    width: 80px;

    opacity: 0.35;
}

.toy-container-collected {
    flex-direction: row;
    align-items: center;
    justify-content: center;

    height: 80px;
    width: 80px;
}

.toy-icon {
    height: 80%;
    width: 80%;
}

.toy-rarity-common{
    background-color: rgba(186, 255, 129, 0.75);
    height: 6px;
    width: 20%;
    border-radius: 4;

    top: 80px;

    position: absolute;
}

.toy-rarity-rare{
    background-color: rgba(124, 213, 255, 0.75);
    height: 6px;
    width: 20%;
    border-radius: 4;

    top: 80px;

    position: absolute;
}

.toy-rarity-epic{
    background-color: rgba(251, 128, 255, 0.75);
    height: 6px;
    width: 20%;
    border-radius: 4;

    top: 80px;

    position: absolute;
}