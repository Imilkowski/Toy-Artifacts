.items-shop_-u-i {
    display: flex;
    flex-direction: column;
    position: absolute;

    align-self: center;
    justify-content: center;
    align-items: center;

    width: 100%;
    height: 92.5%;

    top: 7.5%;
    bottom: 0;

    padding: 10px;

    -unity-font-definition: var(--font-regular);
}

.panel-container {
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;

    width: 100%;
    border-radius: 16px;

    background-color: rgb(128, 145, 184);
}

.title-container {
    flex-direction: row;
    align-items: center;
    justify-content: center;
    align-self: center;

    height: 80px;
    width: 60%;
}

.title {
    -unity-font-style: bold;
    font-size: 24px;

    -unity-text-align: middle-center;

    overflow: hidden;
    white-space: normal;
    -unity-text-overflow-position: end;
}

.close-button-container {
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    height: 40px;

    right: 16px;
    top: 16px;

    position: absolute
}

.close-button-icon {
    background-color: rgba(0, 0, 0, 0);
    height: 24px;
    width: 24px;
}

.content-separator {
    height: 8px;
}

.items-container{
    height: 800px;
    width: 100%;
    margin-top: 32px;

    flex-direction: row;
    align-items: flex-start;
    align-self: center;
    justify-content: center;
    flex-wrap: wrap;
}

.item-button-container{
    margin: 4px;

    border-radius: 16px;

    height: 128px;
    width: 90px;
}

.button__content{
    flex-direction: column;
    align-items: center;
    justify-content: center;
    align-self: flex-start;
}

.item-icon {
    background-color: rgb(170, 185, 224);
    height: 80px;
    width: 80px;
    padding: 8px;

    top: -8px;

    border-radius: 16px;
}

.buy-button {
    margin-top: 8px;
    align-self: center;
    width: 85%;
}

.price-container {
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
}

.currency-icon {
    height: 24px;
    width: 24px;
}

.currency-label {
    font-size: 20px;
    left: 4px;
    top: 1px;
}