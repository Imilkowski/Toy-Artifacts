.actionBar {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 50px;
    flex-direction: row;
    justify-content: center;
}

.actionButton {
    background-color: rgba(0,0,0,0.25);
    border-radius: 12px;
    width: 50px;
    height: 50px;
    margin-left: 4px;
    margin-right: 4px;
}

.buttonImage {
    flex-grow: 1;
    padding: 3px;
}